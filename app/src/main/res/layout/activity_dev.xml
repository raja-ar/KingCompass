<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/parallax_image_height"
                android:scaleType="centerCrop"
                android:src="@drawable/bg2"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Apps Developed"
    android:id="@+id/developer"
    android:textSize="40sp"
    android:layout_marginTop="100dp"
    android:layout_centerHorizontal="true"
    android:layout_alignTop="@+id/image"
     />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By"
            android:layout_below="@+id/developer"
            android:id="@+id/by"

            android:textSize="40sp"
            android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Raaja Ar"
                android:layout_below="@+id/by"
android:id="@+id/raaja"

                android:textSize="50sp"
                android:layout_centerHorizontal="true" />

            <View
                android:id="@+id/anchor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/parallax_image_height"
                android:minHeight="@dimen/parallax_image_height" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_below="@id/anchor"
                android:layout_height="wrap_content"
                android:src="@drawable/iapp_1"
                android:id="@+id/app1"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"

               />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/iapp_2"
                android:layout_below="@id/app1"
                android:id="@+id/app2"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/iapp_3"
                android:layout_below="@id/app2"
                android:id="@+id/app3"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                />


              </RelativeLayout>

    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <include layout="@layout/gradient_header" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar"
        app:theme="@style/Toolbar" />
</FrameLayout>
